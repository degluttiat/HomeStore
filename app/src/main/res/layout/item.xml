<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/itemImage"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/day1_2" />

    <LinearLayout
        android:id="@+id/texts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/breakfast"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textBreakfast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="кусочек ржаного хлеба и кофе без сахара." />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lunch"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textLunch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 вареных яйца, вареная капуста с растительным маслом и стакан томатного сока." />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/supper"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textSupper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100г вареной говядины и стакан кефира." />

    </LinearLayout>

</LinearLayout>


